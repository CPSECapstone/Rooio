<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jobsConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1"
    tools:context=".Jobs">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="364dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="716dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="252dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="70dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scheduledConstraint"
        android:layout_width="455dp"
        android:layout_height="40dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/gray_button_border_bottom"
        app:layout_constraintEnd_toStartOf="@+id/inProgressConstraint"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/scheduledList"
            android:layout_width="356dp"
            android:layout_height="1dp"
            android:background="#FAFFFFFF"
            android:divider="@drawable/blank_border"
            android:dividerHeight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inProgressConstraint"
        android:layout_width="455dp"
        android:layout_height="40dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gray_button_border_bottom"
        app:layout_constraintEnd_toStartOf="@+id/sideMover"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/inProgressList"
            android:layout_width="356dp"
            android:layout_height="1dp"
            android:background="#FAFFFFFF"
            android:divider="#00000000"
            android:dividerHeight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pendingTitleConstraint"
        android:layout_width="454dp"
        android:layout_height="75dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/gray_button_border_top"
        app:layout_constraintBottom_toTopOf="@+id/pendingConstraint"
        app:layout_constraintEnd_toStartOf="@+id/scheduledTitleConstraint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/pending"
            android:layout_width="138dp"
            android:layout_height="35dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="27dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nunito"
            android:text="@string/pending"
            android:textAlignment="center"
            android:textColor="#9A50BA"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scheduledTitleConstraint"
        android:layout_width="454dp"
        android:layout_height="75dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/gray_button_border_top"
        app:layout_constraintBottom_toTopOf="@+id/scheduledConstraint"
        app:layout_constraintEnd_toStartOf="@+id/inProgressTitleConstraint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/scheduleTitle"
            android:layout_width="138dp"
            android:layout_height="35dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="27dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nunito"
            android:text="@string/scheduled"
            android:textAlignment="center"
            android:textColor="#71A7F1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inProgressTitleConstraint"
        android:layout_width="454dp"
        android:layout_height="75dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gray_button_border_top"
        app:layout_constraintBottom_toTopOf="@+id/inProgressConstraint"
        app:layout_constraintEnd_toStartOf="@+id/sideMover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/inProgressTitle"
            android:layout_width="138dp"
            android:layout_height="35dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="27dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nunito"
            android:text="@string/inProgress"
            android:textAlignment="center"
            android:textColor="#00E39B"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pendingConstraint"
        android:layout_width="451dp"
        android:layout_height="41dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/gray_button_border_bottom"
        app:layout_constraintEnd_toStartOf="@+id/scheduledConstraint"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/pendingList"
            android:layout_width="356dp"
            android:layout_height="1dp"
            android:background="#FAFFFFFF"
            android:dividerHeight="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ListView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sideMover"
        android:layout_width="20dp"
        android:layout_height="1000dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp"
        android:background="#00FDFCFC"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/nunito_sans"
        android:text="@string/view_completed"
        android:textAllCaps="false"
        android:textColor="#6D7377"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/scheduledTitleConstraint"
        app:layout_constraintEnd_toStartOf="@+id/inProgressTitleConstraint"
        app:layout_constraintStart_toEndOf="@+id/pendingTitleConstraint" />

</androidx.constraintlayout.widget.ConstraintLayout>