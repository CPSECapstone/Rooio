<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jobsConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1"
    tools:context=".Jobs">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="364dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="716dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="252dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="70dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/completedConstraint"
        android:layout_width="455dp"
        android:layout_height="40dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="712dp"
        android:background="@drawable/gray_button_border_bottom"
        app:layout_constraintEnd_toStartOf="@+id/sideMover"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/completedList"
            android:layout_width="356dp"
            android:layout_height="1dp"
            android:background="#FAFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/completedTitleConstraint"
        android:layout_width="454dp"
        android:layout_height="75dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="712dp"
        android:background="@drawable/gray_button_border_top"
        app:layout_constraintBottom_toTopOf="@+id/scheduledConstraint"
        app:layout_constraintEnd_toStartOf="@+id/sideMover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/completedTitle"
            android:layout_width="138dp"
            android:layout_height="35dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="27dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nunito"
            android:text="@string/completed"
            android:textAlignment="center"
            android:textColor="#BEC3C7"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sideMover"
        android:layout_width="20dp"
        android:layout_height="1000dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp"
        android:background="#00FDFCFC"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="663dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="897dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/nunito_sans"
        android:text="@string/view_current"
        android:textAllCaps="false"
        android:textColor="#6D7377"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/sideMover"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toEndOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>