<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jobsConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1"
    tools:context=".Jobs">


    <ScrollView
        android:id="@+id/jobsScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="364dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="716dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="252dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="252dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="70dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cancelledConstraint"
        android:layout_width="453dp"
        android:layout_height="40dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/gray_button_border_bottom"
        app:layout_constraintEnd_toStartOf="@+id/declinedConstraint"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/cancelledList"
            android:layout_width="356dp"
            android:layout_height="1dp"
            android:background="#FAFFFFFF"
            android:divider="@drawable/blank_border"
            android:dividerHeight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/declinedConstraint"
        android:layout_width="455dp"
        android:layout_height="40dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gray_button_border_bottom"
        app:layout_constraintEnd_toStartOf="@+id/sideMover"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/declinedList"
            android:layout_width="356dp"
            android:layout_height="1dp"
            android:background="#FAFFFFFF"
            android:divider="@drawable/blank_border"
            android:dividerHeight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/completedTitleConstraint"
        android:layout_width="454dp"
        android:layout_height="75dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/gray_button_border_top"
        app:layout_constraintBottom_toTopOf="@+id/completedConstraint"
        app:layout_constraintEnd_toStartOf="@+id/cancelledTitleConstraint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/completed"
            android:layout_width="138dp"
            android:layout_height="35dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="27dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nunito"
            android:text="@string/archived"
            android:textAlignment="center"
            android:textColor="@color/darkGray"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cancelledTitleConstraint"
        android:layout_width="454dp"
        android:layout_height="75dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/gray_button_border_top"
        app:layout_constraintBottom_toTopOf="@+id/cancelledConstraint"
        app:layout_constraintEnd_toStartOf="@+id/declinedTitleConstraint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/cancelledTitle"
            android:layout_width="138dp"
            android:layout_height="35dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="27dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nunito"
            android:text="@string/cancelled"
            android:textAlignment="center"
            android:textColor="@color/darkGray"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/declinedTitleConstraint"
        android:layout_width="454dp"
        android:layout_height="75dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/gray_button_border_top"
        app:layout_constraintBottom_toTopOf="@+id/declinedConstraint"
        app:layout_constraintEnd_toStartOf="@+id/sideMover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/declinedTitle"
            android:layout_width="138dp"
            android:layout_height="35dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="158dp"
            android:layout_marginBottom="27dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/nunito"
            android:text="@string/declined"
            android:textAlignment="center"
            android:textColor="@color/darkGray"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/completedConstraint"
        android:layout_width="454dp"
        android:layout_height="41dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/gray_button_border_bottom"
        app:layout_constraintEnd_toStartOf="@+id/cancelledConstraint"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/completedList"
            android:layout_width="356dp"
            android:layout_height="1dp"
            android:divider="@drawable/blank_border"
            android:dividerHeight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ListView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sideMover"
        android:layout_width="20dp"
        android:layout_height="1000dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp"
        android:background="#00FDFCFC"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/nunito_sans"
        android:soundEffectsEnabled="false"
        android:text="@string/view_current"

        android:textAllCaps="false"
        android:textColor="#6D7377"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cancelledTitleConstraint"
        app:layout_constraintEnd_toStartOf="@+id/declinedTitleConstraint"
        app:layout_constraintStart_toEndOf="@+id/completedTitleConstraint" />


</androidx.constraintlayout.widget.ConstraintLayout>