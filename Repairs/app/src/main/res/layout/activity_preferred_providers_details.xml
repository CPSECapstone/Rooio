                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.463" />

                <TextView
                    android:id="@+id/info_phone"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.33"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.57" />

                <TextView
                    android:id="@+id/info_license_number"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.329"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.68" />

                <TextView
                    android:id="@+id/info_skills"
                    android:layout_width="300dp"
                    android:layout_height="38dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.33"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.79" />

                <Button
                    android:id="@+id/removeProvider"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="240dp"
                    android:layout_height="55dp"
                    android:background="@drawable/red_button_border"
                    android:fontFamily="@font/nunito_sans"
                    android:text="@string/remove_provider"
                    android:textAllCaps="false"
                    android:textColor="@color/Red"
                    android:textColorHighlight="#00F8F6F6"
                    android:textColorHint="#00FCFBFB"
                    android:textColorLink="#00FDFCFC"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
