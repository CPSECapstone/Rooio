<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1"
    tools:context=".Login">

    <ScrollView
        android:id="@+id/scrollView2"
        style="@android:style/Widget.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="461dp"
                android:layout_height="980dp"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="84dp"
                android:background="@drawable/shadow"
                android:paddingBottom="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.73">

                <TextView
                    android:id="@+id/textViewOverview"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nunito"
                    android:text="@string/overview"
                    android:textAllCaps="true"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.341"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.191" />

                <TextView
                    android:id="@+id/textViewCompanyEmail"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nunito"
                    android:text="@string/company_email"
                    android:textAllCaps="true"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.335"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/logo"
                    app:layout_constraintVertical_bias="0.32" />

                <TextView
                    android:id="@+id/textViewLicenseNumber"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nunito"
                    android:text="@string/license_number"
                    android:textAllCaps="true"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.33"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.58000004" />

                <TextView
                    android:id="@+id/textViewCompanyPhone"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nunito"
                    android:text="@string/company_phone"
                    android:textAllCaps="true"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.33"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.45" />

                <TextView
                    android:id="@+id/textViewSkills"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nunito"
                    android:text="@string/skills"
                    android:textAllCaps="true"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.329"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.7" />

                <TextView
                    android:id="@+id/info_overview"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textColor="@color/darkGray"
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.341"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/logo"
                    app:layout_constraintVertical_bias="0.237" />

                <TextView
                    android:id="@+id/info_email"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textColor="@color/darkGray"
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.329"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/logo"
                    app:layout_constraintVertical_bias="0.36" />

                <TextView
                    android:id="@+id/info_phone"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textColor="@color/darkGray"
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.33"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo" />

                <TextView
                    android:id="@+id/info_license_number"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textColor="@color/darkGray"
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.329"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.63" />

                <TextView
                    android:id="@+id/info_skills"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textColor="@color/darkGray"
                    android:textSize="27sp"
                    app:layout_constraintBottom_toTopOf="@+id/removeProvider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.347"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.947" />

                <Button
                    android:id="@+id/removeProvider"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="240dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="48dp"
                    android:background="@drawable/red_button_border"
                    android:fontFamily="@font/nunito_sans"
                    android:soundEffectsEnabled="false"
                    android:text="@string/remove_provider"
                    android:textAllCaps="false"
                    android:textColor="@color/Red"
                    android:textColorHighlight="#00F8F6F6"
                    android:textColorHint="#00FCFBFB"
                    android:textColorLink="#00FDFCFC"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/gray_phone_border"
                    android:padding="1.5dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.039"
                    tools:srcCompat="@tools:sample/avatars[0]" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="300dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/darkGray"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.028" />

                <ImageView
                    android:id="@+id/greenBar"
                    android:layout_width="82dp"
                    android:layout_height="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.089999974"
                    app:srcCompat="@color/colorAccent" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nunito_sans"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/lightGray"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/logo"
                    app:layout_constraintVertical_bias="0.120000005" />

                <ProgressBar
                    android:id="@+id/loadingPanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.060000002" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/nunito"
                android:textColor="@color/errorMessage"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailsLayout"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@drawable/no_elevation"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <TextView
            android:id="@+id/detailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/service_provider_details"
            android:textColor="@color/darkGray"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_button_details"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/cancel"
            android:soundEffectsEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.619"
            app:srcCompat="@mipmap/chevron_left" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="974dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="1187dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="179dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="1194dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
